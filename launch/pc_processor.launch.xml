<?xml version="1.0" encoding="UTF-8"?>

<launch>

    <arg name='use_sim_time' default='false'/>
    <arg name='robot_name' default='default_robot_name'/>

    <node pkg='vikings_bot_point_cloud_processor' exec='camera_processor.py' name='data_filter_camera_processor' namespace='$(var robot_name)'>
        <param name='robot_name' value='$(var robot_name)'/>
        <param name='use_sim_time' value='$(var use_sim_time)'/>
        <param name='safe_classes' value='[20, 18, 9, 11]'/>
    </node>
    <!-- Classes for deeplabv3_mobilenet_v3_large:
    __background__: 0,
    aeroplane: 1,
    bicycle: 2,
    bird: 3,
    boat: 4,
    bottle: 5,
    bus: 6,
    car: 7,
    cat: 8,
    chair: 9,
    cow: 10,
    diningtable: 11,
    dog: 12,
    horse: 13,
    motorbike: 14,
    person: 15,
    pottedplant: 16,
    sheep: 17,
    sofa: 18,
    train: 19,
    tvmonitor: 20,
    -->
    

    <node pkg='vikings_bot_point_cloud_processor' exec='depth_processor.py' name='data_filter_depth_processor' namespace='$(var robot_name)'>
        <param name='robot_name' value='$(var robot_name)'/>
        <param name='use_sim_time' value='$(var use_sim_time)'/>
    </node>

    <node pkg='vikings_bot_point_cloud_processor' exec='lidar_processor.py' name='data_filter_lidar_processor' namespace='$(var robot_name)'>
        <param name='robot_name' value='$(var robot_name)'/>
        <param name='use_sim_time' value='$(var use_sim_time)'/>
    </node>

</launch>